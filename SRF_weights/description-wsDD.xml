<?xml version='1.0' encoding='utf-8'?>
<program_description>
  <program provider="PUT" name="SRF_weights" version="1.0.0" displayName="SRFWeights" />
  <documentation>
    <description>SRFWeights - computes weights of criteria using the revised Simos procedure</description>
    <url>https://github.com/Yamadads/PrometheeDiviz</url>
  </documentation>
  <parameters>

    <input id="input1" name="criteria_ranking" displayName="criteria ranking" isoptional="0">
      <documentation>
        <description>Criteria Values listing full ranking of criteria and containing information about blank cards.</description>
      </documentation>
      <xmcda tag="criteriaValues"><![CDATA[
        
        <criteriaValues mcdaConcept="Importance" name="ranking">
		<criterionValue>
			<criterionID>c01</criterionID>
			<value>
				<integer>1</integer>
			</value>
		</criterionValue>
		<criterionValue>
			<criterionID>c02</criterionID>
			<value>
				<integer>3</integer>
			</value>
		</criterionValue>
		<criterionValue>
			<criterionID>c03</criterionID>
			<value>
				<integer>4</integer>
			</value>
		</criterionValue>
		</criteriaValues>
        
      ]]></xmcda>
    </input>

    <input id="input2" name="method_parameters" displayName="method parameters" isoptional="0">
      <documentation>
        <description>Simos? procedure needs some parameters from users.
          First parameter is telling how many times the last criterion is more important than the first one in the ranking
          Second parameter is telling how many decimal places can be used in weight value.</description>
      </documentation>
      <xmcda tag="methodParameters"><![CDATA[
        
        <methodParameters>
          <parameter name="criteria_weight_ratio">
            <value>
              <real>%1</real>
            </value>
          </parameter>
          <parameter name="decimal_places">
            <value>
              <label>%2</label>
            </value>
          </parameter>
        </methodParameters>
        
      ]]></xmcda>
      <gui status="preferGUI">
        <entry id="%1" type="float" displayName="criteria weight ratio">
          <documentation>
            <description>How many times the last criterion is more important than the first one in the ranking</description>
          </documentation>
        </entry>
        <entry id="%2" type="enum" displayName="decimal places">
          <items>
            <item id="item0">
              <description>Integer value</description>
              <value>0</value>
            </item>
            <item id="item1">
              <description>One decimal place</description>
              <value>1</value>
            </item>
            <item id="item2">
              <description>Two decimal places</description>
              <value>2</value>
            </item>
          </items>
          <defaultValue>item0</defaultValue>
        </entry>
      </gui>
    </input>

    <output id="output1" name="weights" displayName="weights">
      <documentation>
        <description>Weights for each criterion generated by Simos' procedure</description>
      </documentation>
      <xmcda tag="criteriaValues" />
    </output>

    <output id="output2" name="messages" displayName="messages">
      <documentation>
        <description>Messages or errors generated by this module.</description>
      </documentation>
      <xmcda tag="methodMessages" />
    </output>

  </parameters>
</program_description>
