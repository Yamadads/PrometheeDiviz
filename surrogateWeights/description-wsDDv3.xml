<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../docs/w3-ws/specificationData/description.xsd">
  <program provider="PUT" name="surrogateWeights" displayName="SurrogateWeights" version="1.0.0" />
  <documentation>
    <description>SurrogateWeights - computes weights of criteria using ranking specified by user. Module allows to choose one of four methods.
    </description>
    <url>https://github.com/Yamadads/PrometheeDiviz</url>
  </documentation>
  <parameters>
    <input id="input1" name="criteria_ranking" displayName="criteria ranking" isoptional="0">
      <documentation>
        <description>Criteria Values listing full ranking of criteria.</description>
      </documentation>
      <xmcda tag="criteriaValues">
        <![CDATA[
        <criteriaValues name="ranking" mcdaConcept="Importance">
		<criterionValue>
			<criterionID>c01</criterionID>
			<values>
				<value>
					<integer>1</integer>
				</value>
			</values>
		</criterionValue>
		<criterionValue>
			<criterionID>c02</criterionID>
			<values>
				<value>
					<integer>2</integer>
				</value>
			</values>
		</criterionValue>
		<criterionValue>
			<criterionID>c03</criterionID>
			<values>
				<value>
					<integer>3</integer>
				</value>
			</values>
		</criterionValue>
	</criteriaValues>
        ]]>
      </xmcda>
    </input>

    <input id="input2" name="method_parameters" displayName="method parameters" isoptional="0">
      <documentation>
        <description>PrometheeSurrogateWeigts module creates weights for criteria using several methods. In this parameter you can choose this method.
        </description>
      </documentation>
      <xmcda tag="programParameters">
        <![CDATA[
		<programParameters>
			<parameter name="method">
				<values>
					<value>
						<label>%1</label>
					</value>
				</values>
			</parameter>
		</programParameters>
        ]]>
      </xmcda>
      <gui status="preferGUI">
        <entry id="%1" type="enum" displayName="method">
          <items>
            <item id="item0">
              <description>Equal weights - return equal weight for each criterion</description>
              <value>equal_weights</value>
            </item>
            <item id="item1">
              <description>Rank sum - provides normalized weights from the relationship between the ranking position of the criterion and the sum of ranks.</description>
              <value>rank_sum</value>
            </item>
            <item id="item2">
              <description>Reciprocal of the Ranks -  This method uses the reciprocal of the ranks which are normalized by dividing each term by the sum of the reciprocals.</description>
              <value>rank_reciprocal</value>
            </item>
            <item id="item3">
              <description>Rank-Order Centroid - This method uses the vertices from the simplex to define the centroid weight for the criteria.</description>
              <value>rank_ordered_centroid</value>
            </item>
          </items>
          <defaultValue>item0</defaultValue>
        </entry>
      </gui>
    </input>

    <output id="output1" name="weights" displayName="weights">
      <documentation>
        <description>Weights for each criterion</description>
      </documentation>
      <xmcda tag="criteriaValues" />
    </output>

    <output id="output2" name="messages" displayName="messages">
      <documentation>
        <description>Messages or errors generated by this module.</description>
      </documentation>
      <xmcda tag="programExecutionResult" />
    </output>

  </parameters>
</program_description>
